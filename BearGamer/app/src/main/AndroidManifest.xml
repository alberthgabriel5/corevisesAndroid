<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alfonso.beargamer">
<uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".BearGamerActivty"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AdmiActivity"
            android:label="@string/title_activity_admi"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.ADMI" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterAdmiActivity"
            android:label="@string/title_activity_register_admi"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.REGISTERADMI" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterClientActivity"
            android:label="@string/title_activity_register_client"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UpdateClientActivity"
            android:label="@string/title_activity_update_client"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DeleteClientActivity"
            android:label="@string/title_activity_delete_client"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchClientActivity"
            android:label="@string/title_activity_search_client"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UpdateAdmiActivity"
            android:label="@string/title_activity_update_admi"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterGameActivity"
            android:label="@string/title_activity_register_game"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>