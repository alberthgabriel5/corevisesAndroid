<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alfonso.beargamerclient.RegisterClientActivity"
    tools:showIn="@layout/activity_register_client">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/etRegisterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColorHint="@android:color/holo_blue_bright"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etRegisterEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="@android:color/holo_blue_bright"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etRegisterPassClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="********"
            android:inputType="textPassword"
            android:textColorHint="@android:color/holo_blue_bright"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/sfv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Confirm Password"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etRegisterClientPass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="********"
            android:inputType="textPassword"
            android:textColorHint="@android:color/holo_blue_bright"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etRegisterBirthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="yy/mm/dd"
            android:inputType="date"
            android:textColorHint="@android:color/holo_blue_bright"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnRegisterClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@android:color/holo_blue_light"
            android:text="Register"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
